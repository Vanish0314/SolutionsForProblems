{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-cpp-active",
      "type": "shell",
      "command": "xmake f -m debug && xmake build -- \"${fileBasenameNoExtension}\"",
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "panel": "new"
      },
      "runOptions": { "reevaluateOnRerun": true }
    },
    {
      "label": "build-cs-active",
      "type": "shell",
      "command": "bash ${workspaceFolder}/.vscode/scripts/build_cs.sh \"${file}\"",
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "runOptions": { "reevaluateOnRerun": true }
    },
    {
      "label": "build-fs-active",
      "type": "shell",
      "command": "bash ${workspaceFolder}/.vscode/scripts/build_fs.sh \"${file}\"",
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "runOptions": { "reevaluateOnRerun": true }
    }
  ]
}


